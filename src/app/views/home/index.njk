{% extends 'layout.njk' %}

{% block content %}
  <section class="shop container">
    <h2>Ãšltimos Produtos</h2>

    <div class="items">
      {% for product in products %}
        <div class="product">
          <div class="image"
            style="background-image: url('{{product.img if product.img else 'https://placehold.it/500x250?text=Produto%20sem%20imagem'}}')"
          >
          </div>
          {% if product.oldPrice != product.price %}
            <div class="old-price">{{product.oldPrice}}</div>
          {% endif %}
          <p>{{product.price}}</p>
          <h4>{{product.name}}</h4>

          <a href="/produtos/{{product.id}}" class="button">Ver Produto</a>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}