{% extends 'layout.njk' %}

{% block content %}

<section class="password container form">
  <form method="POST" action="/usuarios/esqueceu-senha">

    <div class="header">
      <h3>Esqueci a senha</h3>
    
    </div>
    <div class="fields">
      <div class="item">
        <div>E-mail</div>
        <div class="input">
          <input 
            type="email" 
            name="email" 
            placeholder="Digite o email cadastrado" 
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
            required
          >
        </div>
      </div>
    </div>
    <button class="button" type="submit">Recuperar a seha</button>
  </form>
</section>

{% endblock content %}
