{% extends 'layout.njk' %}

{% import "parts/card.njk" as card %}

{% block content %}

{% call card.render('Esqueci a senha', 'password container') %}

<form method="POST" action="/usuarios/esqueceu-senha">
  <div class="fields">
    <div class="item">
      <div>E-mail</div>
      <div class="input">
        <input 
          type="email" 
          name="email" 
          placeholder="Digite o email cadastrado" 
          value="{{user.email}}"
          onblur="Validate.apply(this, 'isEmail')"
          required
        >
      </div>
    </div>
  </div>
  <button class="button" type="submit">Recuperar a seha</button>
</form>

{% endcall %}

{% endblock content %}
