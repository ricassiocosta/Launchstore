<div class="item">
  <div>E-mail</div>
  <div class="input">
    <input 
      type="email" 
      name="email" 
      placeholder="Digite o seu e-mail" 
      value="{{user.email}}"
      onblur="Validate.apply(this, 'isEmail')"
      required
    >
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class="input">
    <input 
      type="password" 
      name="password" 
      placeholder="Digite sua senha"
      required
    >
  </div>
</div>